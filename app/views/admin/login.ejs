<%- include('../partials/_head', {
  title: '🔐 Login Admin - Cardápio Digital',
  description: 'Área administrativa - Login para gerenciar o cardápio',
  area: 'admin',
  adminPageCss: 'login.css'
}) %>

<!-- Background Shapes -->
<div class="bg-shape bg-shape-1"></div>
<div class="bg-shape bg-shape-2"></div>
<div class="bg-shape bg-shape-3"></div>

<!-- Login Container -->
<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <div class="login-icon">🔐</div>
      <h1 class="login-title">Área Administrativa</h1>
      <p class="login-subtitle">Faça login para acessar o painel de controle</p>
    </div>

    <form class="login-form" id="loginForm" method="POST" action="/admin/login">
      <div class="form-group">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-input"
          placeholder="admin@exemplo.com"
          required
          autocomplete="email"
        >
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Senha</label>
        <div class="password-wrapper">
          <input
            type="password"
            id="password"
            name="password"
            class="form-input"
            placeholder="••••••••"
            required
            autocomplete="current-password"
          >
          <!-- Apenas visual (sem JS) -->
          <span class="password-toggle" aria-hidden="true" title="Mostrar/ocultar senha">👁️</span>
        </div>
      </div>

      <div class="remember-forgot">
        <label class="remember-me">
          <input type="checkbox" id="remember" name="remember">
          <span>Lembrar-me</span>
        </label>
        <a href="#" class="forgot-link">Esqueceu a senha?</a>
      </div>

      <button type="submit" class="btn-login">Entrar</button>
    </form>

    <div class="back-link">
      <a href="/">
        <span>←</span>
        <span>Voltar ao Cardápio</span>
      </a>
    </div>
  </div>
</div>

</body>
</html>
