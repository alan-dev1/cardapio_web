<%- include('partials/_head', {
  title: '403 - Acesso Negado | Cardápio Digital',
  description: 'Você não tem permissão para acessar esta página.',
  area: 'public',
  pageCss: 'erro.css'
}) %>

<%- include('partials/_navbar', { navActive: '' }) %>

<main>
  <div class="container error-container">
    <h1 class="error-code">403</h1>
    <h2 class="error-title">Acesso Negado</h2>
    <p class="error-message">
      <%= typeof mensagem !== 'undefined' ? mensagem : 'Você não tem permissão para acessar esta página.' %>
    </p>
    <div style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
      <a href="/" class="btn btn-primary">Voltar para o início</a>
      <% if (!usuario) { %>
        <a href="/login" class="btn btn-secondary">Fazer Login</a>
      <% } %>
    </div>
  </div>
</main>

<%- include('partials/_footer') %>