<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Card√°pio Digital - P√°gina Principal</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navigation">
        <div class="nav-container">
            <div class="nav-brand">
                <a href="/">üçî Card√°pio</a>
            </div>
            <div class="nav-links">
                <a href="/" class="nav-link active">P√°gina Principal</a>
                <a href="/lanches" class="nav-link">Lanches</a>
                <a href="/bebidas" class="nav-link">Bebidas</a>
                <a href="/localizacao" class="nav-link">Localiza√ß√£o</a>
                <a href="/admin" class="nav-link">Admin</a>
            </div>
        </div>
    </nav>


    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <h1 class="hero-title">
                    üçî Bem-vindo ao nosso
                    <span class="hero-accent">Card√°pio Digital</span>
                </h1>
                <p class="hero-description">
                    Descubra sabores √∫nicos e ingredientes frescos em cada mordida. 
                    Explore nosso menu completo com lanches artesanais e bebidas especiais.
                </p>
                <div class="hero-buttons">
                    <a href="/lanches" class="btn btn-primary">Ver Lanches</a>
                    <a href="/bebidas" class="btn btn-secondary">Ver Bebidas</a>
                </div>
            </div>
        </section>

        <!-- Destaques Lanches -->
        <section class="section">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">üî• Lanches em Destaque</h2>
                    <p class="section-description">Os queridinhos dos nossos clientes</p>
                </div>
                
                <div class="products-grid">
                    <% if (lanches && lanches.length > 0) { %>
                        <% lanches.forEach(lanche => { %>
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="<%= lanche.imagem %>" alt="<%= lanche.nome %>">
                                </div>
                                <div class="product-content">
                                    <h3 class="product-name"><%= lanche.nome %></h3>
                                    <p class="product-description"><%= lanche.descricao %></p>
                                    <div class="product-footer">
                                        <span class="product-price">R$ <%= Number(lanche.preco).toFixed(2) %></span>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="empty">Nenhum lanche dispon√≠vel no momento.</p>
                    <% } %>
                </div>

                <div class="section-link">
                    <a href="/lanches">Ver todos os lanches ‚Üí</a>
                </div>
            </div>
        </section>

        <!-- Destaques Bebidas -->
        <section class="section section-alt">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title">ü•§ Bebidas Especiais</h2>
                    <p class="section-description">Refrescantes e saborosas para acompanhar</p>
                </div>
                
                <div class="products-grid">
                    <% if (bebidas && bebidas.length > 0) { %>
                        <% bebidas.forEach(bebida => { %>
                            <div class="product-card">
                                <div class="product-image">
                                    <img src="<%= bebida.imagem %>" alt="<%= bebida.nome %>">
                                </div>
                                <div class="product-content">
                                    <h3 class="product-name"><%= bebida.nome %></h3>
                                    <p class="product-description"><%= bebida.descricao %></p>
                                    <div class="product-footer">
                                        <span class="product-price">R$ <%= Number(bebida.preco).toFixed(2) %></span>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="empty">Nenhuma bebida dispon√≠vel no momento.</p>
                    <% } %>
                </div>

                <div class="section-link">
                    <a href="/bebidas">Ver todas as bebidas ‚Üí</a>
                </div>
            </div>
        </section>
    </main>
</body>
</html>
