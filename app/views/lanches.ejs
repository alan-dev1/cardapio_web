<%- include('partials/_head', {
  title: 'Card√°pio Digital - Lanches',
  description: 'Deliciosos lanches artesanais.',
  area: 'public'
}) %>



<%- include('partials/_navbar', { navActive: 'lanches' }) %>

<main>
  <section class="page-header">
    <div class="container">
      <h1 class="page-title">üçî Nossos Lanches</h1>
      <p class="page-description">
        Deliciosos hamb√∫rgueres artesanais preparados com ingredientes frescos e de qualidade
      </p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="products-grid products-grid-full">
        <% if (lanches && lanches.length > 0) { %>
          <% lanches.forEach(lanche => { %>
            <div class="product-card">
              <div class="product-image">
                <img src="<%= lanche.imagem %>" alt="<%= lanche.nome %>">
              </div>
              <div class="product-content">
                <h3 class="product-name"><%= lanche.nome %></h3>
                <p class="product-description"><%= lanche.descricao %></p>
                <div class="product-footer">
                  <span class="product-price">R$ <%= Number(lanche.preco).toFixed(2).replace('.', ',') %></span>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p>Nenhum lanche cadastrado ainda.</p>
        <% } %>
      </div>
    </div>
  </section>
</main>

<%- include('partials/_footer') %>
